{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": false,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "paths": {
            "*": ["node_modules/*"]
        },
    },
    "include": [
        "src/**/*"
    ]
}
